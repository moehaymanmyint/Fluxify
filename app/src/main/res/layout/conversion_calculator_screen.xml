<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversionCalculatorScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/head"
        android:layout_width="375dp"
        android:layout_height="91dp"
        android:layout_marginBottom="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/coversionLogo"
            android:layout_width="82dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/coverter1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/conversionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/grand_hotel"
            android:text="Conversion Converter"
            android:textColor="#0D2A56"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toEndOf="@+id/coversionLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.489" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/tempView"
        android:layout_width="300dp"
        android:layout_height="112dp"
        android:background="@drawable/rectangle"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head"
        app:layout_constraintVertical_bias="0.091"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tempText"
        android:layout_width="158dp"
        android:layout_height="39dp"
        android:elevation="15dp"
        android:fontFamily="@font/gabriela"
        android:text="Temperature"
        android:textColor="#0D2A56"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tempView"
        app:layout_constraintEnd_toEndOf="@+id/tempView"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="@+id/tempView"
        app:layout_constraintTop_toTopOf="@+id/tempView"
        app:layout_constraintVertical_bias="0.547" />

    <ImageView
        android:id="@+id/tempImg"
        android:layout_width="93dp"
        android:layout_height="83dp"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tempView"
        app:layout_constraintEnd_toEndOf="@+id/tempView"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toEndOf="@+id/tempText"
        app:layout_constraintTop_toTopOf="@+id/tempView"
        app:layout_constraintVertical_bias="0.586"
        app:srcCompat="@drawable/temperature" />

    <View
        android:id="@+id/ageView"
        android:layout_width="300dp"
        android:layout_height="112dp"
        android:background="@drawable/rectangle"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempView"
        app:layout_constraintVertical_bias="0.084"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ageText"
        android:layout_width="154dp"
        android:layout_height="59dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/gabriela"
        android:text="Age Calculator"
        android:textColor="#0D2A56"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ageView"
        app:layout_constraintEnd_toEndOf="@+id/ageView"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="@+id/ageView"
        app:layout_constraintTop_toTopOf="@+id/ageView"
        app:layout_constraintVertical_bias="0.603" />

    <ImageView
        android:id="@+id/ageImg"
        android:layout_width="113dp"
        android:layout_height="89dp"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ageView"
        app:layout_constraintEnd_toEndOf="@+id/ageView"
        app:layout_constraintStart_toEndOf="@+id/ageText"
        app:layout_constraintTop_toTopOf="@+id/ageView"
        app:srcCompat="@drawable/age" />

    <View
        android:id="@+id/discountView"
        android:layout_width="300dp"
        android:layout_height="112dp"
        android:background="@drawable/rectangle"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageView"
        app:layout_constraintVertical_bias="0.202"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/discountText"
        android:layout_width="154dp"
        android:layout_height="59dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/gabriela"
        android:text="Discount Calculator"
        android:textColor="#0D2A56"
        android:textSize="20sp"
        android:textStyle="bold"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/discountView"
        app:layout_constraintEnd_toEndOf="@+id/discountView"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="@+id/discountView"
        app:layout_constraintTop_toTopOf="@+id/discountView"
        app:layout_constraintVertical_bias="0.49" />

    <ImageView
        android:id="@+id/discountImg"
        android:layout_width="113dp"
        android:layout_height="89dp"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/discountView"
        app:layout_constraintEnd_toEndOf="@+id/discountView"
        app:layout_constraintStart_toEndOf="@+id/discountText"
        app:layout_constraintTop_toTopOf="@+id/discountView"
        app:srcCompat="@drawable/discount" />

</androidx.constraintlayout.widget.ConstraintLayout>